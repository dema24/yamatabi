<table class='table'>
  <div class="text-center"><%= image_tag user.get_profile_image, size:'150x150', class:"rounded-circle" %></div>
  <tr>
	  <th class="text-nowrap">会員ID</th>
	  <td><%= user.id %></td>
  </tr>
  <tr>
	  <th class="text-nowrap">アカウント名</th>
	  <td><%= user.name %></td>
  </tr>
  <tr>
	  <th class="text-nowrap">自己紹介文</th>
	  <td><%= user.introduction %></td>
  </tr>
  <tr>
	  <th class="text-nowrap">メールアドレス</th>
	  <td><%= user.email.truncate(10) %></td>
  </tr>
  <tr>
	  <th class="text-nowrap">会員ステータス</th>
	  <td>
	    <% if user.is_deleted? %>
	      <p class="text-secondary">退会</p>
      <% else %>
        <p class="text-success">有効</p>
      <% end %>
	   </td>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_admin_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
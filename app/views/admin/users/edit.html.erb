<div class="container">
  <div class="mt-3">
    <h2 class="d-inline bg-light p-2 px-3 rounded">登録情報変更</h2>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-9 px-5 px-sm-0 mt-3 text-nowrap">

      <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :id, "会員ID" %></th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th><%= f.label :image, "プロフィール画像" %></th>
            <td><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "アカウント名" %></th>
            <td><%= f.text_field :name, autofocus: true, required: true, class: 'form-control' %></td>
          </tr>
          <tr>
            <th><%= f.label :introduction, "自己紹介文" %></th>
            <td><%= f.text_area :introduction, autofocus: true, class: 'form-control' %></td>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></td>
          </tr>
          <tr>
            <td><%= f.label :is_deleted, "会員ステータス" %></td>
            <td class="form-inline">
               　<%= f.radio_button :is_deleted, false %>
               　<%= f.label :is_deleted, "有効", value: false %>
               　<%= f.radio_button :is_deleted, true %>
               　<%= f.label :is_deleted, "退会", value: true %>
            </td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "変更内容を保存" , class: 'btn btn-success form-control'%></td>
        </table>
      <% end %>
    </div>
  </div>
</div>
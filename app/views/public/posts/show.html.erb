<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>会員情報</h2>
      <%= render 'public/users/info', user: @post.user %>
    </div>
    <div class='col-md-9'>
  		<h2>
  		  <strong><%= @post.title %></strong>
  		</h2>
  		<table class='table table-borderless'>
  		  <tr>
  		    <%= image_tag @post.get_main_image, size:"800x500", class:"p-1" %>
  		  </tr>
  		  <tr class="d-flex flex-wrap">
          <% @post.sub_images.each do |sub_image| %>
            <%= image_tag sub_image, size:"200x150", class:"p-1" %>
          <% end %>
        </tr>
        <tr>
          <td class="pl-1">
            <%= link_to user_path(@post.user), class:"text-reset" do %>
              <%= image_tag @post.user.get_profile_image, class:"rounded-circle", size:"50x50" %>
              <%= @post.user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= @post.body %></td>
        </tr>
        <tr>
          <td>
            <% @post.tags.each do |tag| %>
              #<%= tag.name %>
            <% end %>
          </td>
          <td class=<%= "favorite-" + @post.id.to_s %> >
            <%= render "public/favorites/btn", post: @post %>
          </td>
          <td class="post-comments-counter">
            <%= render "public/post_comments/counter", post: @post %>
          </td>
          <% if @post.user == current_user %>
            <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}" %></td>
          <% end %>
        </tr>
      </table>

      <div class="post-comments-index">
        <%= render "public/post_comments/index", post: @post %>
      </div>

      <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>

    </div>
  </div>
</div>
<div class="container">
  <div class="mt-3 mb-5">
    <h2 class="d-inline bg-light p-2 px-3 rounded">投稿編集</h2>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-9 px-5 px-sm-0 mt-3 text-nowrap">

      <%= form_with model: @post, method: :patch do |f| %>
      <%= render 'layouts/errors', obj: @post %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :main_image, "メイン画像" %></th>
          <td><%= f.file_field :main_image, class: "form-control-file user_image", accept: 'image/*' %></td>
        </tr>
        <tr>
          <th><%= f.label :sub_image, "サブ画像(複数枚選択可能)" %></th>
          <td><%= f.file_field :sub_images, multiple: true, class: "form-control-file user_image", accept: 'image/*' %></td>
        </tr>
        <tr>
          <th><%= f.label :title, "タイトル" %></th>
          <td><%= f.text_field :title, autofocus: true, required: true, class: 'form-control' %></td>
        </tr>

        <tr>
          <th><%= f.label :body, "投稿文" %></th>
          <td><%= f.text_area :body, required: true, class: 'form-control' %></td>
        </tr>

        <tr>
          <th><%= f.label :name, "タグ" %></th>
          <td><%= f.text_field :name, value: @tag_list, class: 'form-control' %></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "投稿を編集する" , class: 'btn btn-success form-control'%></td>
        </tr>
      <% end %>
      </table>

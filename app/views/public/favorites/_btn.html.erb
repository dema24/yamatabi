<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class:"text-nowrap" do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class:"text-nowrap" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>
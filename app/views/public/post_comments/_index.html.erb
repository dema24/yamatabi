<table class="table table-borderless">
  <tbody>
      <% post.post_comments.each do |post_comment| %>
      <tbody class="border">
        <tr>
          <td>
            <%= link_to user_path(post_comment.user), class:"text-reset" do %>
              <%= image_tag post_comment.user.get_profile_image, class:"rounded-circle", size:"50x50" %>
              <%= post_comment.user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= post_comment.comment %></td>
          <td><%= l post_comment.created_at %></td>
          <td class="pl-3">
            <% if post_comment.user == current_user %>
              <%= link_to "削除", post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger btn-sm pull-right text-nowrap", remote: true %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
  </tbody>
</table>
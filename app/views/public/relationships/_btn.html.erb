<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationships_path(user.id), method: :delete, class: "btn btn-info text-nowrap" %>
  <% else %>
    <%= link_to "フォローする", relationships_path(user.id), method: :post, class: "btn btn-success text-nowrap" %>
  <% end %>
<% end %>